{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="d-flex gap-3 align-items-center">
        <h1>Products</h1>
        <a class="btn btn-primary" href="{{ path('app_product_new') }}">Create new</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Calories</th>
                <th>Unit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td class="align-middle">{{ product.id }}</td>
                <td class="align-middle">{{ product.name }}</td>
                <td class="align-middle">{{ product.calories }}</td>
                <td class="align-middle">{{ product.unitAmount }} {{ product.unit.value }}</td>
                <td class="d-flex gap-3">
                    <a class="btn btn-warning" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                    {{ include('product/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
