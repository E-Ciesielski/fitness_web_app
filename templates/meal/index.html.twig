{% extends 'base.html.twig' %}

{% block title %}Meal index{% endblock %}

{% block body %}
    <h1>Meals</h1>
    <a class="btn btn-primary " href="{{ path('app_meal_new') }}">Create new</a>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for meal in meals %}
            <tr>
                <td class="align-middle">{{ meal.name }}</td>
                <td class="d-flex gap-3">
                    <a class="btn btn-info" href="{{ path('app_meal_show', {'id': meal.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_meal_edit', {'id': meal.id}) }}">edit</a>
                    {{ include('meal/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
