{% extends 'base.html.twig' %}

{% block title %}Meal{% endblock %}

{% block body %}
    <h1>Meal</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ meal.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ meal.name }}</td>
        </tr>
        </tbody>
    </table>
    <h3>Products</h3>
    <ul class="list-group mb-3">
        {% for mealProduct in meal.mealProducts %}
            <li class="list-group-item">{{ mealProduct.product.name }}</li>
        {% endfor %}
    </ul>
    <a class="btn btn-secondary" href="{{ path('app_meal_index') }}">Back</a>
{% endblock %}
